<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
      
    <persistence-unit name="ENADE" transaction-type="RESOURCE_LOCAL">
            
        <class>com.mycompany.enadeitalo2021.model.Prova</class>
            
        <class>com.mycompany.enadeitalo2021.model.Tipousuario</class>
            
        <class>com.mycompany.enadeitalo2021.model.Questao</class>
            
        <class>com.mycompany.enadeitalo2021.model.Tipoquestao</class>
            
        <class>com.mycompany.enadeitalo2021.model.Resultado</class>
            
        <class>com.mycompany.enadeitalo2021.model.Usuario</class>
            
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
            
        <properties>
                  
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/enade"/>
                  
            <property name="javax.persistence.jdbc.user" value="root"/>
                  
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
                  
            <property name="javax.persistence.jdbc.password" value="root"/>
                
        </properties>
          
    </persistence-unit>
    
</persistence>
